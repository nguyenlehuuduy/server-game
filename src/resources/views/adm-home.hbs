                        text: 'Có cái gì đó rỗng!',
                        footer: '<a href="">Tại sao tôi lại gặp vấn đề này?</a>'
                    })
                } else {
                    let formData = new FormData();
                    formData = {
                        nameType: nameType,
                        descriptionType: desAnswer,
                        roleOfAnswer: roleAnswer
                    }
                    //request api
                    $.ajax({
                        url: 'add-new-type-questions',
                        type: 'POST',
                        dataType: "json",
                        data: formData,
                        encode: true,
                    }).done(function (data) {
                        if (data.data == "success") {
