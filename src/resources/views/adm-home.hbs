        addATypeQuestion()
        function addATypeQuestion() {
            $(".btn-add-type-question").click(function () {
                $(".pre-loading").show()
                let desAnswer = $(".descript-answer").val();
                let roleAnswer = $(".role-answer").val();
                let nameType = $(".name-type").val();
                //validation
                if (nameType == "" || roleAnswer == "") {
                    $(".pre-loading").hide()
                    Swal.fire({
                        icon: 'error',
